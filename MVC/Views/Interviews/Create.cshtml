@model InterviewModel

@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container";
    var dateTimePickerClass = "datetimepicker";
}
@{
    ViewData["Title"] = "Interview Create";
}

<div class="@containerDivClass">
    <h3>@ViewData["Title"]</h3>
    <hr />
</div>

<div class="@containerDivClass">
    @if (TempData["Message"] is not null)
    {
    <p class="text-danger">
        @TempData["Message"]
    </p>
    }
    <form asp-action="Create" autocomplete="off">
		@Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <label asp-for="Date" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
				<input asp-for="Record.Date" class="form-control @dateTimePickerClass" type="text" />
				<span asp-validation-for="Record.Date" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="Customer" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
				<select asp-for="Record.CustomerId" class="form-select" asp-items="ViewBag.CustomerId">
					<option value="">-- Select --</option>
				</select>
				<span asp-validation-for="Record.CustomerId" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="Agent" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
				<select asp-for="Record.AgentId" class="form-select" asp-items="ViewBag.AgentId">
					<option value="">-- Select --</option>
				</select>
				<span asp-validation-for="Record.AgentId" class="text-danger"></span>
			</div>
        </div>
        <div class="row mb-3">
            <label asp-for="Sale" class="col-2 col-form-label fw-bold"></label>
			<div class="col-10">
				<select asp-for="Record.SaleId" class="form-select" asp-items="ViewBag.SaleId">
					<option value="">-- Select --</option>
				</select>
				<span asp-validation-for="Record.SaleId" class="text-danger"></span>
			</div>
        </div>

@* Can be uncommented and used for many to many relationships. {Entity} may be replaced with the related entiy name in the controller and views. *@
